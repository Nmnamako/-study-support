<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <!--<%= render "devise/shared/error_messages", resource: resource %>-->
  <div class="box">
    <h2>Sign up</h2>
    
    <div class="field">
      <%= f.text_field :name, class: "name", placeholder: "name", required: true %>
    </div>
  
    <div>
      <%= f.email_field :email, autocomplete: "email", class: "email", placeholder: "email", required: true %>
    </div>
  
    <div>
      <%= f.password_field :password, autocomplete: "new-password", class: "password", placeholder: "password(6文字以上)", required: true %>
    </div>
  
    <div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password", placeholder: "password(再確認)", required: true %>
    </div>
  
    <div>
      <%= f.submit "Sign up", class: "signup" %>
    </div>
  </div>
<% end %>